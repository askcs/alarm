<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_avatar"
        android:layout_gravity="center_vertical"
        android:paddingRight="2dp"
        android:src="@android:drawable/star_big_on"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:text="Marianne van Nieuwkerk"
            />
        <TextView
            android:id="@+id/estimated_distance"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:text="Distance: 12,4 km"
            />
        <TextView
            android:id="@+id/estimated_time"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:text="Time: 17 min."
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_button_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >
        <ImageButton
            android:id="@+id/action_button_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@drawable/gradient_button_blue"
            android:src="@android:drawable/ic_menu_call"
            android:padding="2dp"
            android:layout_margin="2dp"
            />
        <ImageButton
            android:id="@+id/action_button_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_button_blue"
            android:src="@android:drawable/ic_menu_call"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            />
    </LinearLayout>
</LinearLayout>